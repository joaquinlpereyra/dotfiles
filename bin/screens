#!/usr/bin/env bash
if [[ "$1" == "reset" ]]; then
    xrandr -s 0
    exit 0
elif [[ "$1" == "right" ]]; then
    pos="--right-of"
else 
    pos="--left-of"
fi

# if vga is set, then set the secondary screen to by DP-1
if [[ "$2" == "vga" ]]; then
    secondaryScreen="DP-1"
elif [[ -z "$IS_HOME" ]]; then
    secondaryScreen="HDMI-0"
else
    secondaryScreen="HDMI-1-2"
fi

if [[ -z "$IS_HOME" ]]; then
    mainScreen="DP-4"
else 
    mainScreen="eDP-1"
fi

xrandr --output "$mainScreen" --auto --output "$secondaryScreen" --auto "$pos" "$mainScreen" && ~/.dotfiles/wall-randomizer.sh
